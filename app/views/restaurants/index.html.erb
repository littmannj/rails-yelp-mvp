
<div class="container">
  <h1 class="text-center">Restaurants</h1>
  <p class="text-center"><%= link_to "Add new restaurant", new_restaurant_path %></p>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-4 text-center card">
      <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('app/assets/images/resto.png');">
        <h3><%= restaurant.name %></h3>
        <p><%= restaurant.category.capitalize %></p>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone_number %></p>
        <%= link_to "More details", restaurant_path(restaurant) %>
      </div>
    </div>
    <% end %>
  </div>
</div>


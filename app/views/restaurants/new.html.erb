<h1 class="text-center" >Add new restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name, placeholder: "Brindisa" %>
      <%= f.input :address, placeholder: "10 Downing Street" %>
      <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Choose one"  %>
      <%= f.input :phone_number, placeholder: "07 123 45 6789" %>
      <%= f.submit "submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
